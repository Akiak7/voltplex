{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "slug", "title", "author", "description", "tags",
    "minecraft_versions", "recurrent_complex_versions",
    "dependencies", "license", "preview", "file", "created_at"
  ],
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
    "title": { "type": "string", "minLength": 1, "maxLength": 120 },
    "author": { "type": "string", "minLength": 1, "maxLength": 80 },
    "description": { "type": "string", "minLength": 10, "maxLength": 1000 },
    "tags": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "minecraft_versions": { "type": "array", "items": { "type": "string" } },
    "recurrent_complex_versions": { "type": "array", "items": { "type": "string" } },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "biomes": { "type": "array", "items": { "type": "string" } },
    "dimensions": { "type": "array", "items": { "type": "string" } },
    "license": { "type": "string" },
    "preview": { "type": "string", "const": "preview.png" },
    "file": { "type": "string" },
    "created_at": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "source_url": { "type": "string" }
  },
  "additionalProperties": false
}
